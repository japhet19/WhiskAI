.App {
  text-align: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.App-header {
  background-color: #282c34;
  padding: 20px 0;
  color: white;
}

.App-header h1 {
  margin: 0;
  font-size: 1.8rem;
}

main {
  display: flex;
  justify-content: center;
  padding: 20px;
}

@media (max-width: 600px) {
  main {
    padding: 10px;
  }
}
